    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="title" content="Discord Embed Generator">
    <meta name="description" content="generate a custom discord embed">
    <meta property="og:url" content="https://botlists.com" />
