
{{#if home}}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="title" content="Discord Embed Generator">
    <meta name="description" content="generate a custom discord embed">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://botlists.com" />
    <meta property="og:title" content="Discord Embed Generator">
    <meta property="og:description" content="generate a custom discord embed">

    <meta name="theme-color" content='{{color}}'>
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://botlists.com">
    <meta property="twitter:title" content="Discord Embed Generator">
    <meta property="twitter:description" content="generate a custom discord embed">
{{else}}
    <link type="application/json+oembed" href="https://e.dbos.me/oembed?author=undefined" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="title" content="{{title}}">
    <meta name="description" content="{{description}}">
    <meta property="og:type" content="website">
    {{#if url}}<meta http-equiv="refresh" content="0.0;url={{url}}">{{/if}}
    <meta property="og:url" content="https://botlists.com" />
    <meta property="og:title" content="{{title}}">
    <meta property="og:description" content="{{description}}">
    {{#if image}}<meta property="og:image" content="{{image}}">{{/if}}

    <meta name="theme-color" content='{{color}}'>
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{url}}">
    <meta property="twitter:title" content="{{title}}">
    <meta property="twitter:description" content="{{description}}">
    <meta property="twitter:image" content="{{image}}">
{{/if}}
